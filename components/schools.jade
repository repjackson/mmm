template(name='school_reports')
    with current_doc
        .ui.stackable.padded.grid
            .row
                //- .four.wide.column
                //-     a.ui.big.button(href="/school/#{_id}/view" title='save')
                //-         i.chevron.left.icon
                //-         |school
                //- .twelve.wide.column
