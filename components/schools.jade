template(name='schools')
    .ui.stackable.padded.grid
        .row
            .twelve.wide.column
                .ui.inline.header 
                    +i name='school'
                    |schools
                if currentUser
                    .ui.icon.button.add_school(title='add school')
                        //- +i name='plus' classes='ui mini inline image'
                        i.green.large.plus.icon
                        //- |add school
        .row
            .sixteen.wide.column
                .ui.stackable.four.cards
                    each schools
                        +school_card

template(name='school_card')
    .ui.card
        a(href="/school/#{_id}")
            img.ui.fluid.image(src="{{c.url image crop='lpad'}}")
            //- img.ui.fluid.image(src="{{c.url school_image_id crop='lpad'}}")
        .content
            a.ui.header(href="/school/#{_id}" title='balance') #{title}
            .ui.green.inline.header $#{csd.school_balance}
            .ui.green.inline.small.header(title='income') ($#{csd.total_credit_amount}
            .ui.red.inline.small.header(title='expenses') / -$#{csd.total_debit_amount})

                    
template(name='school_view_layout')
    +nav
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.fluid.small.button(href="/schools")
                        i.chevron.left.icon
                        +i name='school' classes='ui inline mini image'
                        |schools
                    +image_view key='image' label='image' direct=true
                    .ui.header
                        | #{title}
                    .ui.header
                        small principal
                        | #{principal_name}
                    if can_edit
                        a.ui.fluid.button(href="/school/#{_id}/edit")
                            +i name='pencil' classes='ui inline mini image'
                            | edit
                    +html_raw_view key='google_map' direct=true
                .twelve.wide.column
                    a.ui.compact.button(href="/school/#{_id}/dashboard" class="{{isActiveRoute regex='school_dashboard'}}")
                        +ismall name='home'
                        |feed
                    a.ui.compact.button(href="/school/#{_id}/reports" class="{{isActiveRoute regex='school_reports'}}")
                        +ismall name='invoice'
                        | reports
                    a.ui.compact.button(href="/school/#{_id}/students" class="{{isActiveRoute regex='school_students'}}")
                        +ismall name='students'
                        | dashboard
                    a.ui.compact.button(href="/school/#{_id}/feed" class="{{isActiveRoute regex='school_feed'}}")
                        +ismall name='rss'
                        | feed
                    a.ui.compact.button(href="/school/#{_id}/stats" class="{{isActiveRoute regex='school_stats'}}")
                        +ismall name='line-chart'
                        | stats
                    a.ui.compact.button(href="/school/#{_id}/credits" class="{{isActiveRoute regex='school_credits'}}")
                        +ismall name='chevron-up'
                        | credits
                    a.ui.compact.button(href="/school/#{_id}/debits" class="{{isActiveRoute regex='school_debits'}}")
                        +ismall name='chevron-down'
                        | debits
                    a.ui.compact.button(href="/school/#{_id}/grades" class="{{isActiveRoute regex='school_grades'}}")
                        +ismall name='leaderboard'
                        |grades
                    a.ui.compact.button(href="/school/#{_id}/jobs" class="{{isActiveRoute regex='school_jobs'}}")
                        +ismall name='business'
                        |jobs
                    a.ui.compact.button(href="/school/#{_id}/shop" class="{{isActiveRoute regex='school_shop'}}")
                        +ismall name='shop'
                        |shop
                    a.ui.compact.button(href="/school/#{_id}/services" class="{{isActiveRoute regex='school_services'}}")
                        +ismall name='service'
                        |services
                    a.ui.compact.button(href="/school/#{_id}/stock" class="{{isActiveRoute regex='school_stock'}}")
                        +ismall name='pie-chart'
                        |stock
                    a.ui.compact.button(href="/school/#{_id}/loans" class="{{isActiveRoute regex='school_loans'}}")
                        +ismall name='debt'
                        |loans
                    +yield


