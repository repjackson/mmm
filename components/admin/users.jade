template(name='users') 
    .ui.padded.grid
        .row
            .sixteen.wide.column
                .ui.inline.header 
                    i.users.icon
                    |users
                .ui.left.icon.input
                    i.search.icon
                    input.username_search(type='text' placeholder='lookup user' autofocus='autofocus')
                .ui.hidden.divider
                .ui.list 
                    each users 
                        .item 
                            a.ui.inline.header(href="/user/#{username}")
                                if admin 
                                    i.shield.icon(title='admin')
                                |#{first_name} #{last_name}
                            small #{username}
                            each roles 
                                .ui.basic.label #{this}
                            if is_dev
                                i.circular.link.remove.icon.remove_user
