template(name='students') 
    .ui.left.icon.fluid.input
        i.search.icon
        input.username_search(type='text' placeholder='lookup student' autofocus='autofocus')
    .ui.hidden.divider
    .ui.centered.five.stackable.cards
        each students
            +student
            
template(name='student')                
    .ui.card
        .image
            //- a(href="/user/#{username}/")
            //- img(src="{{c.url image_id height=400 width=400 background='white' crop='pad'}}")
            if image_id
                img.ui.image(src="{{c.url image_id width=400 height=400 crop='fit'}}")
            else if image_id
                img.ui.image(src="{{c.url image_id width=400 height=400 crop='fit'}}")
        .content
            a(href="/student/#{username}/")
                h2.ui.center.aligned.header #{name} 
                .ui.small.header @#{username}
            each five_tags
                .ui.small.basic.label(class=tag_class) 
                    strong #{this}
            .ui.small.inline.header(title='karma')
                |#{karma}
                i.grey.yin.yang.icon
            .ui.small.inline.header(title='points')
                |#{points}
                small pts
            +user_connect_button
            
            
            
            
