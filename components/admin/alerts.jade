template(name='alerts')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.header 
                    i.bell.outline.icon
                    |alerts
                .ui.small.grey.header subscriptions
                with currentUser
                    +boolean_edit key='credits' direct=true
                    +boolean_edit key='debits' direct=true
            .twelve.wide.column
                .ui.list
                    each my_alerts
                        .item 
                            |#{when} #{message}
                            +remove_button
                    unless my_alerts
                        .ui.header no alerts
