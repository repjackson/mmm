template(name='alerts')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.header 
                    i.bell.outline.icon
                    |alerts
                .ui.small.grey.header subscriptions
                with currentUser
                    +boolean_edit key='credits' direct=true
                    +boolean_edit key='debits' direct=true
            .twelve.wide.column
                .ui.header my alerts
                each my_alerts
                    .ui.segment 
                        |#{when} #{text}
                        a.ui.button(href=reference_link) view doc
                        +viewing
                        +remove_button
                unless my_alerts
                    .ui.header no alerts
                .ui.header all alerts
                each alerts
                    .ui.segment
                        |#{when} #{message}
                        +remove_button
