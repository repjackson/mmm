template(name='group_edit_layout')
    +user_nav
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        small editing 
                        div
                        strong #{title}
                        div
                        small group
                    a.ui.icon.fluid.button(href="/group/#{_id}" title='save')
                        i.checkmark.green.icon
                        //- |Save
                    //- if is_admin
                    .ui.vertical.fluid.pointing.menu
                        a.item(href="/group/#{_id}/edit/info" class="{{isActiveRoute regex='group_edit_info'}}") 
                            |info
                            i.info.icon
                        a.item(href="/group/#{_id}/edit/settings" class="{{isActiveRoute regex='group_edit_settings'}}") 
                            |settings
                            i.cog.icon
                        a.item(href="/group/#{_id}/edit/features" class="{{isActiveRoute regex='group_edit_features'}}")
                            |features
                            i.th.icon                    
                    .ui.vertical.large.fluid.pointing.menu
                        each enabled_features
                            a.item(href="/group/#{current_doc._id}/edit/f/#{slug}")
                                |#{title}
                                i.icon(class=icon)
                .twelve.wide.column
                    +yield
                                    
template(name='group_edit_settings')
    .ui.header 
        i.cog.icon
        |settings
    .ui.two.column.grid
        .column
            +boolean_edit key='published' label='published' icon='eye' direct=true
            +boolean_edit key='private' label='private' icon='invisible' direct=true
            if private
                +multi_user_edit key='visible_user_ids' label='visible to users' icon='users' direct=true
            .ui.orange.button.remove_group
                i.remove.icon
                |remove group
                

template(name='group_edit_info')
    .ui.header 
        i.info.icon
        |info
    .ui.two.column.grid
        .column
            +text_edit key='title' label='group title' direct=true
            +text_edit key='leader_name' label='leader name' placeholder='enter your name' tooltip='examples: john smith' direct=true
            +text_edit key='company_name' label='company name' direct=true
            +image_edit key='group_image_id' label='image' direct=true
        .column
            +textarea_edit key='description' label='description' direct=true
            +array_edit key='tags' label='tags' icon='tags' direct=true
            div
            +boolean_edit key='phone_exists' label='phone' icon='phone' direct=true
            if phone_exists 
                +phone_edit key='phone_number' label='phone number' direct=true
            div
            +boolean_edit key='address_exists' label='address' icon='address' direct=true
            if address_exists 
                +text_edit key='address' label='address' direct=true
                +array_edit key='location_tags' label='location tags' direct=true
            div
            +boolean_edit key='hours_exist' label='hours' icon='clock' direct=true
            if hours_exist 
                +text_edit key='hours' label='hours' direct=true
                +array_edit key='availability_tags' label='availability tags' direct=true
            if is_admin
                +leader_selector
                                    
template(name='group_edit_members')                                    
    +member_selector

template(name='group_edit_credits')
    //- .ui.large.header 
    //-     i.plus.icon
    //-     |credits
    a.ui.button(href="/group/#{_id}/edit/templates" class="{{isActiveRoute regex='group_edit_templates'}}")
        i.download.icon
        |templates
    .ui.stackable.grid
        .eight.wide.column
            .ui.small.header from template
            .ui.fluid.vertical.pointing.menu
                each template_credit_types
                    +credit_menu_item
            div
            .ui.small.inline.header custom
            .ui.icon.button.add_credit_type
                i.plus.icon
            .ui.fluid.vertical.pointing.menu
                each custom_credit_types
                    +credit_menu_item
        .eight.wide.column
            div
            with selected_credit
                +transaction
                        
                        
template(name='credit_menu_item')                        
    a.item.select_credit(class=credit_class) 
        |#{title}
        small +$#{amount}
        if is_automatic
            i.lightning.yellow.icon
        if is_individual
            i.user.outline.icon(title='member scope')
        if is_group 
            i.users.icon(title='group scope')
        if is_admin
            i.circular.remove.icon.remove_credit

                        
template(name='group_edit_debits')       
    //- .ui.large.header 
    //-     i.chevron.up.icon
    //-     |debits
    a.ui.button(href="/group/#{current_doc._id}/edit/templates" class="{{isActiveRoute regex='group_edit_templates'}}")
