template(name='tasks')
    .ui.stackable.padded.grid
        .row
            .sixteen.wide.column
                .ui.inline.header 
                    +i name='tasks'
                    |tasks
                .ui.button.add_task
                    +i name='plus' classes='ui inline mini image'
                    |add task    
                .ui.stackable.five.cards
                    each tasks
                        +task_card

template(name='task_card')
    //- .ui.card    
    a.ui.card(href="/task/#{_id}/view")
        img.ui.fluid.image(src="{{c.url task_image_id width=400 height=200 crop='fill'}}")
        .content
            a.ui.header(href="/task/#{_id}/view") #{title}
                    


template(name='task_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column 
                    .ui.header 
                        i.pencil.icon
                        | edit '#{title}' task
                    a.ui.big.fluid.button(href="/task/#{_id}/view" title='save')
                        i.checkmark.large.green.icon
                        |save
                    +remove_button
                    +image_edit key='image_id' icon='image' label='image' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                .ten.wide.column 
                    +text_edit key='title' direct=true
                    +array_edit key='assigned_to' direct=true
                    
                    +html_edit key='description' label='description' icon='content' direct=true
                





template(name='task_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .eight.wide.column
                    a.ui.button(href="/tasks")
                        i.chevron.left.icon
                        +i name='task' classes='ui inline mini image'
                        |task
                    .ui.header task view 
                    +image_view key='task_image_id' label='image' direct=true
                    a.ui.button(href="/task/#{_id}/edit")
                        i.pencil.icon
                        |edit
                .eight.wide.column
                    .ui.header #{title}
                    .ui.header 
                        +i name='task'
                        |purchases
                    each purchases
                        .ui.header #{title}
                    +comments
                    


