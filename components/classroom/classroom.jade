template(name='my_classrooms')
    .ui.stackable.padded.grid
        .row
            .twelve.wide.column
                .ui.inline.header 
                    i.school.icon
                    |your classrooms
                if is_teacher
                    .ui.icon.button.add_classroom(title='add classroom')
                        //- +i name='plus' classes='ui mini inline image'
                        i.green.large.plus.icon
                        //- |add classroom
        .row
            .sixteen.wide.column
                .ui.stackable.four.cards
                    each classrooms
                        +classroom_card

template(name='classrooms')
    .ui.stackable.padded.grid
        .row
            .twelve.wide.column
                .ui.inline.header 
                    +i name='classroom'
                    |classrooms
                if currentUser
                    .ui.icon.button.add_classroom(title='add classroom')
                        //- +i name='plus' classes='ui mini inline image'
                        i.green.large.plus.icon
                        //- |add classroom
        .row
            .sixteen.wide.column
                .ui.stackable.four.cards
