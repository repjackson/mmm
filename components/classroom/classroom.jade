template(name='classroom_view_layout')
    +nav
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.fluid.button(href="/classrooms")
                        i.chevron.left.grey.icon
                        i.school.icon
                        //- +i name='classroom' classes='ui inline mini image'
                        |classrooms
                    .ui.center.aligned.huge.header
                        | #{title}
                    img.ui.centered.rounded.small.image(src="{{c.url image_id gravity='face' crop='fit'}}")
                    .ui.large.fluid.vertical.pointing.menu
                        a.item(href="/classroom/#{_id}/" class="{{isActiveRoute regex='classroom_students'}}")
                            i.dashboard.grey.icon
                            | dashboard
                    .ui.vertical.large.fluid.pointing.large.menu
                        a.item(href="/classroom/#{current_doc._id}/students")
                            |students
                            i.users.icon    
                        a.item(href="/classroom/#{current_doc._id}/files")
                            |files
                            i.file.icon
                        a.item(href="/classroom/#{current_doc._id}/lunch")
                            |lunch
                            i.file.icon
                        a.item(href="/classroom/#{current_doc._id}/reports")
                            |reports
                            i.line.chart.icon
                        a.item(href="/classroom/#{current_doc._id}/shop")
                            |shop
                            i.shop.icon
                        //- each enabled_features
                        //-     a.item(href="/classroom/#{current_doc._id}/f/#{slug}")
                        //-         |#{title}
                        //-         i.grey.icon(class=icon)
                    .ui.header
                        small teacher
                        | #{teacher_name}
                    if can_edit
                        a.ui.fluid.large.button(href="/classroom/#{_id}/edit/info")
                            i.pencil.icon
                            | edit
                .twelve.wide.column
                    +yield
    +footer



