template(name='classroom_feed')
    .ui.inline.header 
        +i name='rss'
        |feed
    if is_admin 
        .ui.button.remove_all_events
            i.shield.icon
            |remove all events
    div
    .ui.feed.scrolling
        each classroom_events
            .event 
                .label
                    img.ui.avatar.image(src="{{c.url target_user.profile_image_id height=100 gravity='face' crop='fill'}}")
                    if is_credit
                        i.green.plus.icon
                        //- +i name='deposit' classes='ui inline mini image'
                    if is_debit
                        i.red.minus.icon
                        //- +i name='withdrawal' classes='ui inline mini image'
                    else if icon
                        +i name=icon
                .content
                    .summary
                        a.user(href="/user/#{target_user.username}")
                            |#{target_user.name}
                        |#{text}
                        .date #{when}
                    .meta
                        +voting_small
                        a.remove
                            i.undo.icon
                        //- if is_dev
                        //-     +remove_button



template(name='classroom_stats')
    .ui.two.column.grid
        .column
            .ui.header.refresh_classroom_stats
                //- +ismall name='line-chart'
                i.line.chart.icon
                |stats
            div
            .ui.green.inline.header $#{gsd.classroom_balance}
            | balance
            div
            .ui.green.inline.header $#{gsd.total_credit_amount}
            | income
            div
            .ui.red.inline.header -$#{gsd.total_debit_amount}
            | expenses
        .column
            .ui.big.list
                .item #{views} views
                .item #{gsd.student_count} students
                .item #{gsd.credit_count} total credits
                .item #{gsd.debit_count} total debits
                .item $#{gsd.average_credit_per_student} credit/student
                .item $#{gsd.average_debit_per_student} debit/student



