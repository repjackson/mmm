template(name='classroom_students')
    .ui.header 
        i.dashboard.grey.icon
        |classroom dashboard
    with current_doc
        .ui.styled.fluid.accordion 
            .title 
                .ui.header
                    | classroom actions
                    i.dropdown.icon
            .content
                .ui.two.column.grid
                    .column
                        .ui.small.header 
                            i.calendar.grey.inline.icon
                            i.retweet.grey.inline.icon
                            |weekly automatic actions
                        each weekly_automatic_credits
                            .ui.disabled.button(class=bulk_action_class) #{title}
                                span.ui.green.text +#{amount}
                        each weekly_automatic_debits
                            .ui.disabled.button(class=bulk_action_class) #{title}
                                span.ui.green.text +#{amount}
                    .column
                        .ui.small.header 
                            i.clock.grey.inline.icon
                            i.retweet.grey.inline.icon
                            |daily automatic actions
                        each daily_automatic_credits
                            .ui.disabled.button.trigger(class=bulk_action_class) #{title}
                                span.ui.green.text +#{amount}
                        each daily_automatic_debits
                            .ui.disabled.button.trigger(class=bulk_action_class) #{title}
                                span.ui.green.text +#{amount}
                .ui.two.column.grid
                    .column
                        .ui.small.header 
                            i.calendar.grey.inline.icon
                            i.hand.point.up.outline.grey.inline.icon
                            |weekly manual classroom actions
                        //- .ui.button.pay_salary disperse weekly paycheck
                        //-     span.ui.green.text +#{salary_amount}
                        each weekly_manual_credits
                            .ui.button.credit_classroom(class=bulk_action_class) #{title}
                                span.ui.green.text +#{amount}
                        each weekly_manual_debits
                            .ui.button.debit_classroom(class=bulk_action_class) #{title}
                                span.ui.red.text -#{amount}
                    .column
                        .ui.small.header
                            i.clock.grey.inline.icon
                            i.hand.point.up.outline.grey.inline.icon
                            | daily manual classroom actions
                        each daily_manual_classroom_credits
                            .ui.button.credit_classroom(class=bulk_action_class) #{title}
                                span.ui.green.text +#{amount}
                        each daily_manual_classroom_debits
                            .ui.button.debit_classroom(class=bulk_action_class) #{title}
                                span.ui.red.text -#{amount}
    .ui.accordion
        each classroom_students
            .title
                .ui.inline.right.floated.header $#{credit}
                img.ui.avatar.image(src="{{c.url profile_image_id width=300 height=300 gravity='face' crop='fill'}}")
                .ui.inline.header
                    i.dropdown.icon
                    |#{first_name} #{last_name} 
                i.green.plus.circle.big.link.icon.add_bonus
                i.red.minus.circle.big.link.icon.add_fine
                //- .ui.icon.circular.button.
            //- .ui.item
            //- .image
            .content
                a.ui.basic.green.large.right.floated.button(href="/classroom/#{current_doc._id}/student/#{_id}")
                    |view profile
                    i.right.chevron.icon
                .description
                    .ui.two.column.stackable.grid
                        .column
                            each student_credit_types
                                +student_credit_button
                        .column
                            each student_debit_types
                                +student_debit_button


