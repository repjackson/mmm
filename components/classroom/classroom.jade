                        +classroom_card

template(name='classroom_card')
    .ui.card
        a(href="/classroom/#{_id}")
            img.ui.fluid.image(src="{{c.url classroom_image_id crop='lpad'}}")
            //- img.ui.fluid.image(src="{{c.url classroom_image_id crop='lpad'}}")
        .content
            a.ui.header(href="/classroom/#{_id}" title='balance') #{title}
            .ui.green.inline.header $#{csd.classroom_balance}
            .ui.green.inline.small.header(title='income') ($#{csd.total_credit_amount}
            .ui.red.inline.small.header(title='expenses') / -$#{csd.total_debit_amount})
            a.ui.header(href="/classroom/#{_id}")
                |view 
                i.right.chevron.icon

                    
template(name='classroom_view_layout')
    +teacher_nav
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    //- a.ui.fluid.button(href="/my_classrooms")
                    //-     i.chevron.left.grey.icon
                    //-     i.school.icon
                    //-     //- +i name='classroom' classes='ui inline mini image'
                    //-     |classrooms
                    .ui.center.aligned.huge.header
                        | #{company_name}
                    +image_view key='classroom_image_id' label='image' direct=true
                    .ui.big.fluid.vertical.pointing.menu
                        a.item(href="/classroom/#{_id}/students" class="{{isActiveRoute regex='classroom_students'}}")
                            i.dashboard.grey.icon
                            if is_admin
                                img(src="https://img.icons8.com/color/48/000000/the-flash-sign--v2.png")        
                            | dashboard
                        a.item(href="/classroom/#{_id}/lunch" class="{{isActiveRoute regex='classroom_lunch'}}")
                            i.food.grey.icon
                            if is_admin
                                img(src="https://img.icons8.com/color/48/000000/the-flash-sign--v2.png")        
                            | lunch
                        a.item(href="/classroom/#{_id}/reports" class="{{isActiveRoute regex='classroom_reports'}}")
                            i.line.chart.grey.icon
                            if is_admin
                                img(src="https://img.icons8.com/color/48/000000/batman-old.png")        
                            | reports
                        a.item(href="/classroom/#{_id}/feed" class="{{isActiveRoute regex='classroom_feed'}}")
                            i.list.grey.icon
                            if is_admin
                                img(src="https://img.icons8.com/color/48/000000/batman-old.png")        
                            | feed
                    .ui.header
                        if is_admin
                            img(src="https://img.icons8.com/color/48/000000/the-flash-sign--v2.png")        
                        small teacher
                        | #{teacher_name}
                    a.ui.fluid.large.button(href="/classroom/#{_id}/edit/info")
                        i.pencil.icon
                        | edit
                .twelve.wide.column
                    +yield
    //- +teacher_footer



