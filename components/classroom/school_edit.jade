template(name='school_edit_layout')
    +nav
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        small editing 
                        div
                        strong #{title}
                        div
                        small school
                    a.ui.icon.fluid.button(href="/school/#{_id}" title='save')
                        i.checkmark.green.large.icon
                        //- |Save
                    //- if is_admin
                    .ui.vertical.fluid.pointing.large.menu
                        a.item(href="/school/#{_id}/edit/info" class="{{isActiveRoute regex='school_edit_info'}}") 
                            |info
                            i.info.icon
                        a.item(href="/school/#{_id}/edit/settings" class="{{isActiveRoute regex='school_edit_settings'}}") 
                            |settings
                            i.cog.icon
                        //- a.item(href="/school/#{_id}/edit/features" class="{{isActiveRoute regex='school_edit_features'}}")
                        //-     |features
                        //-     i.th.icon                    
                    .ui.vertical.large.fluid.pointing.large.menu
                        a.item(href="/school/#{current_doc._id}/edit/files" class="{{isActiveRoute regex='school_edit_files'}}")
                            |files
                            i.file.icon
                        a.item(href="/school/#{current_doc._id}/edit/debits" class="{{isActiveRoute regex='school_edit_debits'}}")
                            |debits
                            i.minus.icon
                        a.item(href="/school/#{current_doc._id}/edit/credits" class="{{isActiveRoute regex='school_edit_credits'}}")
                            |credits
                            i.plus.icon
                        a.item(href="/school/#{current_doc._id}/edit/shop" class="{{isActiveRoute regex='school_edit_shop'}}")
                            |shop
                            i.shop.icon
                        a.item(href="/school/#{current_doc._id}/edit/students" class="{{isActiveRoute regex='school_edit_students'}}")
                            |students
                            i.users.icon
                    //- .ui.vertical.large.fluid.pointing.menu
                    //-     each enabled_features
                    //-         a.item(href="/school/#{current_doc._id}/edit/f/#{slug}")
                    //-             |#{title}
                    //-             i.icon(class=icon)
                .twelve.wide.column
                    +yield

template(name='school_edit_settings')
    .ui.header 
        i.cog.icon
        |settings
    .ui.one.column.grid
        //- if is_admin 
        .column
            +boolean_edit key='allow_sponsorship' label='allow sponsorships' direct=true
            +boolean_edit key='published' label='published' icon='eye' direct=true
            +boolean_edit key='private' label='private' icon='invisible' direct=true
            if private
                +multi_user_edit key='visible_user_ids' label='visible to users' icon='users' direct=true
            .ui.orange.button.remove_school
                i.remove.icon
                |remove school


