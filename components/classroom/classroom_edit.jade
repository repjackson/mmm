template(name='credit_menu_item')                        
    a.item.select_credit(class=credit_class) 
        |#{title}
        small +$#{amount}
        if is_automatic
            i.lightning.yellow.icon
        if is_individual
            i.user.outline.icon(title='student scope')
        if is_group 
            i.users.icon(title='classroom scope')
        if is_admin
            i.circular.remove.icon.remove_credit

                        
