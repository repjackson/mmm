template(name='schools')
    .ui.stackable.padded.grid
        .row
            .twelve.wide.column
                .ui.inline.header 
                    +i name='school'
                    |schools
                if currentUser
                    .ui.icon.button.add_school(title='add school')
                        //- +i name='plus' classes='ui mini inline image'
                        i.green.large.plus.icon
                        //- |add school
        .row
            .sixteen.wide.column
                .ui.stackable.five.cards
                    each schools
                        +school_card

template(name='school_card')
    .ui.card
        a(href="/school/#{_id}")
            img.ui.image(src="{{c.url image width=200 height=200 crop='lpad'}}")
            //- img.ui.fluid.image(src="{{c.url school_image_id crop='lpad'}}")
        .content
            a.ui.header(href="/school/#{_id}" title='balance') #{title}
            .ui.green.inline.header $#{gsd.school_balance}
            .ui.green.inline.small.header(title='income') ($#{gsd.total_credit_amount}
            .ui.red.inline.small.header(title='expenses') / -$#{gsd.total_debit_amount})
        a.ui.fluid.tertiary.button(href="/school/#{_id}")
            |view details
            i.right.chevron.icon
                    
template(name='school_view_layout')
    +nav
    with current_doc
        .ui.stackable.padded.grid
            .row
                .three.wide.column
                    a.ui.fluid.small.button(href="/schools")
                        i.chevron.left.icon
                        +i name='school' classes='ui inline mini image'
                        |schools
                    +image_view key='image' label='image' direct=true
                    div
                    .ui.inline.center.aligned.header
                        | #{title}
                    //- .ui.header
                    //-     small principal
                    //-     | #{principal_name}
                    div
                    .ui.big.fluid.vertical.menu
                        a.item(href="/school/#{current_doc._id}/students" class="{{isActiveRoute regex='school_students'}}")
                            i.icon
                                +ismall name='students'
                            |students
                        a.item(href="/school/#{current_doc._id}/teachers" class="{{isActiveRoute regex='school_teachers'}}")
                            i.icon
                                +ismall name='teacher'
                            |teachers
                        a.item(href="/school/#{current_doc._id}/teachers" class="{{isActiveRoute regex='school_teachers'}}")
                            i.icon
                                +ismall name='classroom'
                            |classroom
                .thirteen.wide.column
                    +yield
    +footer

