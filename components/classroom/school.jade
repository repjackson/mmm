template(name='school_feed')
    .ui.header 
        i.feed.icon
        |school feed
    .ui.feed.mediumscroll
        each school_events
            .event 
                .label
                    img.ui.avatar.image(src="{{c.url target_user.profile_image_id height=100 gravity='face' crop='fill'}}")
                    if is_credit
                        +i name='deposit' classes='ui inline mini image'
                    if is_debit
                        +i name='withdrawal' classes='ui inline mini image'
                    else if icon
                        +i name=icon
                .content
                    .summary
                        a.user(href="/user/#{target_user.username}")
                            |#{target_user.name}
                        |#{text}
                        .date #{when}
                    .meta
                        +voting_small
                        //- a.like
                        //-     i.like.icon 
                        //-     |4 likes
                        a.remove
                            i.undo.icon
                        //- if is_dev
                        //-     +remove_button



template(name='school_stats')
    .ui.header.refresh_school_stats
        +i name='line-chart'
        |school stats
        div
        .ui.green.inline.small.header $#{gsd.school_balance}
        | balance
        div
        .ui.green.inline.small.header $#{gsd.total_credit_amount}
        | income
        div
        .ui.red.inline.small.header -$#{gsd.total_debit_amount}
        | expenses
    .ui.list
        .item #{views} views
        .item #{gsd.student_count} students
        .item #{gsd.credit_count} total credits
        .item #{gsd.debit_count} total debits
        .item $#{gsd.average_credit_per_student} credit/student
        .item $#{gsd.average_debit_per_student} debit/student
        
    +html_raw_view key='google_map' direct=true
