template(name='questions')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.inline.header 
                    +i name='faq'
                    |questions
                .ui.icon.button.add_question(title='add question')
                    i.plus.icon
                +question_cloud
            .twelve.wide.column
                .ui.button questions you've answered
                .ui.button questions you've haven't answered
                each questions
                    +question_segment


