template(name='question_segment')
    //- .ui.card    
    .ui.segment
        img.ui.fluid.image(src="{{c.url question_image_id width=400 height=200 crop='fill'}}")
        .content
            a.ui.header(href="/question/#{_id}/view") #{title}
            each tags
                .ui.basic.label #{this}
            .ui.small.header 
                +i name='treasure-chest'
                |5c bounty/question
            .ui.small.header 
                +i name='talk'
                |12 answers
                    
            .ui.small.header 
                i.green.checkmark.icon
                |4 correct answers
            .ui.small.header 
                i.red.ban.icon
                |8 incorrect answers
                    


template(name='question_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        i.pencil.icon
                        | edit '#{title}' question
                    a.ui.big.fluid.button(href="/question/#{_id}/view" title='save')
                        i.checkmark.large.green.icon
                        |save
                    +remove_button
                    +boolean_edit key='has_image' label='image' direct=true
                    if has_image
                        +image_edit key='image_id' icon='image' label='image' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                .six.wide.column 
                    +text_edit key='title' label='question' direct=true
                    +boolean_edit key='has_description' label='description' direct=true
                    if has_description
                        +textarea_edit key='description' label='description' icon='content' direct=true
                    //- +html_edit key='description' label='description' icon='content' direct=true
                    .ui.header question type
                    .ui.button.select_multiple_choice(class=multiple_choice_class)
                        +ismall name='multiple-choice'
                        |multiple choice
                    .ui.button.select_essay(class=select_essay_class)
                        +ismall name='content'
                        |essay
                    .ui.button.select_number(class=select_number_class)
                        +ismall name='hashtag'
                        |number answer
                .six.wide.column
                    if is_multiple_choice_answer
                        .ui.fluid.button.add_choice
                                i.plus.green.icon
                                |choice
                        div.scrolling
                            each choices
                                .ui.segment(class=answer_segment_class)
                                    .ui.small.inline.header choice
                                    +number_edit key='number' direct=true
                                    +textarea_edit key='content' direct=true
                                    //- +html_edit key='content' direct=true
                                    +boolean_edit key='correct' direct=true
                    else if is_number_answer
                        +number_edit key='number_answer' label='number answer' direct=true    
                    else if is_essay_answer
                        +array_edit key='required_answer_tags' label='required answer tags' direct=true    



template(name='question_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.fluid.button(href="/questions")
                        i.chevron.left.icon
                        +i name='question' classes='ui inline mini image'
                        |questions
                    .ui.header question view 
                    +image_view key='question_image_id' label='image' direct=true
                    a.ui.fluid.button(href="/question/#{_id}/edit")
                        i.pencil.icon
                        |edit
                    +comments
                .six.wide.column
                    .ui.header #{title}
                    if my_answer
                        .ui.header 
                            +i name='list'
                            |choices
                        each choices
                            .ui.segment(class=answer_segment_class)
                                .ui.header 
                                    |#{number}:
                                    |!{content}
                    else
                        .ui.fluid.button.new_answer_session
                            +i name='raise-a-hand-to-answer--v2' classes='ui inline mini image'
                            |answer
                        .ui.small.center.aligned.header or
                        .ui.fluid.button
                            +i name='cancel' classes='ui inline mini image'
                            |decline to answer
                    //- .ui.button.new_session
                    //-     i.plus.icon
                    //-     |session
                    if my_answer
                        .ui.small.header my answer
                        with my_answer
                            .ui.header #{when} by #{_author_username}
                    .ui.header 
                        +i name='talk'
                        |answers
                    each answer_sessions
                        .ui.header #{when} by #{_author_username}
                .six.wide.column
                    .ui.inline.header
                        +i name='receive-cash'
                        | bounties
                    .ui.icon.button.offer_bounty(title='offer bounty')
                        i.plus.green.icon
                    each bounties
                        .ui.segment
                            a.ui.header(href="/bounty/#{_id}/view")
                                |#{when}
                            div
                            +number_view key='total_amount' label='total amount' direct=true
                            div
                            +number_view key='amount_per_answer' label='amount per answer' direct=true
                        if can_accept 
                            .ui.green.button.accept accept

