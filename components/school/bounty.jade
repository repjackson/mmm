template(name='bounty_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column 
                    .ui.header 
                        i.pencil.icon
                        | edit '#{title}' bounty
                    a.ui.big.fluid.button(href="/bounty/#{_id}/view" title='save')
                        i.checkmark.large.green.icon
                        |save
                    +remove_button
                    div
                    +number_edit key='total_amount' label='total amount' direct=true
                    div
                    +number_edit key='amount_per_answer' label='amount per answer' direct=true
                    //- +image_edit key='image_id' icon='image' label='image' direct=true
                    //- +array_edit key='tags' label='tags' icon='tags' direct=true
                .ten.wide.column 
                    +textarea_edit key='description' label='description' icon='content' direct=true
                





template(name='bounty_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.fluid.button(href="/bounties")
                        i.chevron.left.icon
                        +i name='treasure-chest' classes='ui inline mini image'
                        |bounty
                    .ui.header bounty view 
                    a.ui.fluid.button(href="/bounty/#{_id}/edit")
                        i.pencil.icon
                        |edit
                    .ui.header 
                        i.tags.grey.icon
                        |tags
                    each tags
                        .ui.basic.label #{this}
                .six.wide.column
                    .ui.header #{description}
                    div
                    +number_view key='total_amount' label='total amount' direct=true
                    div
                    +number_view key='amount_per_answer' label='amount per answer' direct=true
                    div
                    +comments
                .six.wide.column
                    .ui.header question
                    +question_widget

template(name='question_widget')
    with parent_question 
        a.ui.small.header(href="/question/#{_id}/view") #{title}


