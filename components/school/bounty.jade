template(name='bounties')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.inline.header 
                    +i name='bounty-passed'
                    |bounties
                .ui.icon.button.add_bounty(title='add bounty')
                    i.plus.icon
                +bounty_cloud
            .twelve.wide.column
                .ui.stackable.five.cards
                    each bounties
                        +bounty_card

template(name='bounty_card')
    //- .ui.card    
    a.ui.card(href="/bounty/#{_id}/view")
        img.ui.fluid.image(src="{{c.url bounty_image_id width=400 height=200 crop='fill'}}")
        .content
            a.ui.header(href="/bounty/#{_id}/view") #{title}
            each tags
                .ui.basic.label #{this}
    
