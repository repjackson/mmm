template(name='loans')
    .ui.stackable.padded.grid
        .row
            .sixteen.wide.column
                .ui.inline.header 
                    +i name='debt'
                    |loans
                .ui.button.add_loan
                    +i name='plus' classes='ui inline mini image'
                    |add loan    
                .ui.hidden.divider
                .ui.stackable.cards
                    each loans
                        +loan_card

template(name='loan_card')
    .ui.card
        .content
            .ui.header #{when}
            +single_user key='name' label='name' icon='title' direct=true
            +text key='employer' label='employer' icon='business' direct=true
            +text key='position' label='position' icon='manager' direct=true
            +number key='amount_requested' label='amount requested' icon='money' direct=true
            +textarea key='loan_reason' label='why do you need the loan now?' icon='money' direct=true
            +boolean key='had_loan_before' label='ever had a loan before?' direct=true
            div
            if had_loan_before
                +number key='previous_loan_amount' label='how much?' direct=true
                +boolean key='late_payments' label='ever had late payments?' direct=true
                +textarea key='previous_loan_reason' label='why did you need the loan?' direct=true
            +textarea key='office_notes' label='for office use only' icon='user-shield' direct=true
            +number key='approved_interest_rate' label='approved interest rate' icon='percentage' direct=true
            a.ui.fluid.button(href="/loan/#{_id}/view")
                |view details
                i.right.arrow.icon


template(name='loan_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        i.pencil.icon
                        | edit '#{title}' loan
                    a.ui.big.fluid.button(href="/loan/#{_id}/view" title='save')
                        i.checkmark.large.green.icon
                        |save
                    +remove_button
                .six.wide.column 
                    +single_user key='name' label='name' icon='title' direct=true
                    +text key='employer' label='employer' icon='business' direct=true
                    +text key='position' label='position' icon='manager' direct=true
                    +number key='amount_requested' label='amount requested' icon='money' direct=true
                    +textarea key='loan_reason' label='why do you need the loan now?' icon='money' direct=true
                .six.wide.column 
                    +boolean key='had_loan_before' label='ever had a loan before?' direct=true
                    div
                    if had_loan_before
                        +number key='previous_loan_amount' label='how much?' direct=true
                        +boolean key='late_payments' label='ever had late payments?' direct=true
                        +textarea key='previous_loan_reason' label='why did you need the loan?' direct=true
                    +textarea key='office_notes' label='for office use only' icon='user-shield' direct=true
                    +number key='approved_interest_rate' label='approved interest rate' icon='percentage' direct=true





template(name='loan_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    a.ui.button(href="/loans")
                        i.chevron.left.icon
                        +i name='debt' classes='ui inline mini image'
                        |loans
                    .ui.header loan view 
                    +image_view key='loan_image_id' label='image' direct=true
                    a.ui.button(href="/loan/#{_id}/edit")
