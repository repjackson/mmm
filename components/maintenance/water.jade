template(name='lower_hot_tub_readings')    
    //- a.ui.big.button(href='/readings/lower' class="{{isActivePath '/readings/lower'}}") 
    .ui.inline.header
        +i name='jacuzzi' 
        |lower hot tub readings
    #add_lower_hot_tub_reading.ui.big.icon.button
        i.green.plus.icon
    table.ui.striped.very.basic.large.table
        thead
            tr
                th ph
                th chlorine
                th temp
                th notes
                th staff
                th when
                th actions
        tbody
            each lower_hot_tub_readings
                tr
                    td #{ph} 
                    td #{chlorine}
                    td #{temperature}
                    td #{notes}
                        .ui.large.basic.label #{ph_message}
                        .ui.large.basic.label #{chlorine_message}
                    td 
                        +author_info
                    td 
                        | #{when}
                    td 
                        a.ui.large.icon.button(href="/lower_hot_tub_reading/edit/#{_id}")
                            i.pencil.icon

            
