template(name='ph')            
    .large.field
        label 
            +ismall name='molecule'
            |ph (goal 7.2-7.4)
            if ph_message
                .ui.big.basic.label #{ph_message}
        input#ph(type='number' step='.1' min='6.4' max='8.0' value=ph)
        
