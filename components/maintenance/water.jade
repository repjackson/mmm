        .ui.text.container
            h1.ui.header edit lower hot tub reading
            .ui.form
                +indoor_chlorine
                +indoor_ph
                +temperature
                +textarea_edit key='notes' direct=true
                a.ui.green.fluid.large.button(href='/readings')
                    i.big.checkmark.icon
