template(name='shop')
    .ui.stackable.padded.grid
        .row
            .sixteen.wide.column
                .ui.header 
                    +i name='shop'
                    |shop
                .ui.button.add_shop
                    +i name='plus' classes='ui inline mini image'
                    |add shop item
                .ui.stackable.cards
                    each shops
                        .ui.card
                            img.ui.fluid.image(src="{{c.url shop_image_id width=400 height=200 crop='fill'}}")
                            .content
                                a.ui.header(href="/shop/#{_id}/view") #{title}
                                .ui.small.header net income #{net_income}

template(name='shop_card')
    //- .ui.card    
    a.ui.card(href="/shop/#{_id}")
        .content
            .ui.large.header #{shop_number}
            //- .ui.small.header school #{school_code}
            //- a.ui.large.button(href="/shop/#{_id}")
            //-     i.yellow.right.chevron.icon
            div
            +i name='rent' title='owner(s)'
            //- i.dollar.icon
            each owners
                .ui.basic.large.label
                    if kiosk_photo
                        img.ui.rounded.image(src="{{c.url kiosk_photo width=200 height=200 gravity='face' crop='fill'}}")
                    else if image_id
                        img.ui.rounded.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                    |#{first_name} #{last_name}
            div
            //- i.home.icon
            +i name='home' title='renters'
            each residents
                .ui.basic.large.label
                    if kiosk_photo
                        img.ui.rounded.image(src="{{c.url kiosk_photo width=200 height=200 gravity='face' crop='fill'}}")
                    else if image_id
                        img.ui.rounded.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                    |#{first_name} #{last_name}
            div
            .ui.small.header #{notes}
            if is_dev
                +number_view key='school_number' direct=true
                +number_view key='shop_number' direct=true
                    


template(name='shop_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column 
                    .ui.header 
                        i.pencil.icon
                        | edit '#{title}' shop
                    a.ui.big.fluid.button(href="/shop/#{_id}/view" title='save')
                        i.checkmark.large.green.icon
                        |save
                    +remove_button
                    +image_edit key='shop_image_id' icon='image' label='image' direct=true
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                .ten.wide.column 
                    +text_edit key='title' direct=true
                    +number_edit key='price' icon='money' direct=true
                    +textarea_edit key='description' label='description' icon='content' direct=true
                





template(name='shop_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .eight.wide.column
                    a.ui.button(href="/shops")
                        i.chevron.left.icon
                        +i name='shop' classes='ui inline mini image'
                        |shop
                    .ui.header shop view 
                    +image_view key='shop_image_id' label='image' direct=true
                    a.ui.button(href="/shop/#{_id}/edit")
                        i.pencil.icon
                        |edit
                .eight.wide.column
                    .ui.header #{title}
                    .ui.header 
                        +i name='shop'
                        |purchases
                    each purchases
                        .ui.header #{title}
                    +comments
                    


