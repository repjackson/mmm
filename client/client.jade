template(name='layout')
    //- img.ui.fluid.image.checkin_banner(src="{{c.url 'frontrange' width=1000 height=1000 crop='crop'}}")
    +nav
    .context
        .ui.stackable.grid.global_container(class=invert_class)
            .centered.row
                .sixteen.wide.column
                    +yield
        unless is_frontdesk
            +footer
        //- +shortcut_modal

template(name='mlayout')
    .global_container(class=invert_class)
        +yield


template(name='verification_confirmation')
    .ui.text.container
        h1.ui.header your email has been verified; you may close the window. 



template(name='not_found')
    .ui.basic.center.aligned.padded.segment
        .ui.center.aligned.header page not found
        if is_staff
            a.ui.button(href="/staff") 
                +i name='user shield'
                |staff
        else 
            a.ui.button(href="/") 
                +i name='home' classes='ui inline mini image'
                |home



template(name='shortcut_modal')
    .ui.shortcut.modal
        .ui.header keyboard shortcuts
        .content
            .ui.large.list
                each shortcuts
                    .item 
                        .header #{combo}
                        .content #{action}
